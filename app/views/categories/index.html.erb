<h1 class="text-3xl font-bold mb-4">Categories</h1>
<div class="mb-4">
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'New', new_category_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @categories.each do |category| %>
    <div class="bg-gray-800 shadow-md rounded-lg p-4 text-center">
      <%= link_to category_path(category), class: "text-white font-semibold" do %>
        <div class="text-xl font-bold mb-2"><%= category.name %></div>
      <% end %>
      <% if user_signed_in? && current_user.admin? %>
        <div class="mt-2 flex justify-center space-x-2">
          <%= link_to 'Edit', edit_category_path(category), class: "bg-transparent hover:bg-gray-500 text-white font-bold py-2 px-4 rounded" %>
          <%= button_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-transparent hover:bg-gray-500 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
