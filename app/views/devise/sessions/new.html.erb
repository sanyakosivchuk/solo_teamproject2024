<!-- app/views/devise/sessions/new.html.erb -->

<div class="bg-gray-800 p-8 rounded-lg shadow-lg max-w-md mx-auto">
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |form| %>
    <div class="mb-6">
      <%= form.label :email, class: "block text-gray-300 font-semibold mb-2" %>
      <%= form.email_field :email, autofocus: true, class: "border border-gray-600 rounded w-full py-2 px-3 bg-gray-700 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring focus:ring-blue-400 focus:border-blue-500" %>
    </div>

    <div class="mb-6">
      <%= form.label :password, class: "block text-gray-300 font-semibold mb-2" %>
      <%= form.password_field :password, autocomplete: "current-password", class: "border border-gray-600 rounded w-full py-2 px-3 bg-gray-700 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring focus:ring-blue-400 focus:border-blue-500" %>
    </div>

    <div class="flex items-center mb-6">
      <%= form.check_box :remember_me, class: "mr-2 h-4 w-4 text-blue-500 bg-gray-700 border-gray-600 focus:ring-blue-400 rounded" %>
      <%= form.label :remember_me, class: "text-sm text-gray-300" %>
    </div>

    <div>
      <%= form.submit "Log in", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition duration-150 ease-in-out" %>
    </div>
  <% end %>
</div>

<div class="mt-6 text-center text-gray-400">
  <%= render "devise/shared/links" %>
</div>
